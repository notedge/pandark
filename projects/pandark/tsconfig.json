{
    "extends": "@sindresorhus/tsconfig",
    "compilerOptions": {
        "target": "es6",
        "jsx": "react",
        "declaration": false,
        "moduleResolution": "node",
        "esModuleInterop": true,

        "noPropertyAccessFromIndexSignature": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,

    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["source/**/*"]
}
