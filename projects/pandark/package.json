        "@types/node": "^16.11.35",
        "chrome-webstore-upload-cli": "^2.1.0",
        "copy-webpack-plugin": "^10.2.4",
        "daily-version": "^2.0.0",
        "dot-json": "^1.2.2",
        "file-loader": "^6.2.0",
        "jest": "^27.5.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "sass": "^1.51.0",
        "sass-loader": "^12.6.0",
        "size-plugin": "^3.0.0",
        "terser-webpack-plugin": "^5.3.1",
        "ts-jest": "^27.1.4",
        "ts-loader": "^9.3.0",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^9.0.0",
        "typescript": "^4.6.4",
        "web-ext": "^6.7.0",
        "web-ext-submit": "^6.8.0",
        "webpack": "^5.72.1",
        "webpack-cli": "^4.9.2"
